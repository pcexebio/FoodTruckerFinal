<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sw.edu.ulima.foodtrucker.LoginActivity"
    android:background="#ff32beff"
    android:orientation="vertical"
    android:id="@+id/Pantalla">

    <LinearLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"

        android:gravity="center">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ftcamion" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/campos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_below="@+id/image"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/eteUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:textSize="18dp"
            android:textColorHint="#ffffffff">
        </EditText>
        <EditText
            android:id="@+id/etePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:textSize="18dp"
            android:textColorHint="#ffffffff">
        </EditText>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fblogin"
            android:background="#ff32beff"
            android:id="@+id/login_button"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tviMensaje"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:textColor="#ffff0b00" />
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/campos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">


        <Button
            android:id="@+id/butingresar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            android:text="Ingresar"
            android:textSize="18dp"
            android:textColor="#ffffffff" />
        <Button
            android:id="@+id/butregistrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/ingresar"
            android:text="Registrase"
            android:textColor="#ffffffff"
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>