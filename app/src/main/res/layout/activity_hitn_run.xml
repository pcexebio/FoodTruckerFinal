<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sw.edu.ulima.foodtrucker.HitnRunActivity"
    android:background="#ff32beff"
    android:orientation="vertical"
    android:id="@+id/HitnRun">

    <LinearLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="35"
        android:orientation="vertical"
        android:gravity="top">

        <ImageView
            android:id="@+id/imageHitnRun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:src="@drawable/hitnrun"
            android:foregroundGravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="16"
        android:layout_below="@+id/image"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_below="@+id/Titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_weight="5">
            <TextView
                android:id="@+id/tviTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criollo"
                android:textColor="#000000"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/tviNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hit&apos;n Run"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_weight="5" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_weight="5">
            <TextView
                android:id="@+id/tviDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cdra. 15 Av. El Ejército, San Isidro"
                android:textColor="#000000"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_below="@+id/tviDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <ImageView
                    android:id="@+id/imgReloj"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/reloj"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/tviHorario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00 a.m. a 04:00 p.m."
                    android:gravity="center"
                    android:textColor="#999999"
                    android:layout_gravity="center_vertical"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="5">

            <Button
                android:id="@+id/butMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver menú"
                android:backgroundTint="#ff32beff"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/butRuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Obtener Ruta"
                android:backgroundTint="#ff32beff"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
